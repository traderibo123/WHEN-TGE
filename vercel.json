{
  "version": 2,
  "builds": [
    {
      "src": "api/avatar.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/avatar",
      "dest": "/api/avatar.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}